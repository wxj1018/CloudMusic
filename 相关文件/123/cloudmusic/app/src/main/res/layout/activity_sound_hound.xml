<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/headertitle"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sound_know_activity_sound"
            android:gravity="center"
            android:text="听歌识曲"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:paddingTop="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sound_history_activity_sound"
            android:gravity="center"
            android:text="识别历史"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:paddingTop="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3sp">
        <TextView
            android:id="@+id/sound_left_line_activity_sound"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/sound_right_line_accitity_sound"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
