<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.administrator.cloudmusic.activity.DriverModeActivity">

    <LinearLayout
        android:id="@+id/driver_1"
        android:layout_marginTop="@dimen/padding_margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/driver_back_activity_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/driver_back"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:layout_marginLeft="@dimen/padding_margin_10"/>
        <Button
            android:id="@+id/driver_broadcast_activity_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/driver_broadcast"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"/>
        <Button
            android:id="@+id/driver_likemode_activity_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/driver_likemode"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver_2"
        android:layout_marginTop="100dp"
        android:layout_below="@id/driver_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/driver_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜帖街（伴奏）"
            android:textSize="@dimen/font_size_x"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/driver_singer"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈奕迅"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/driver_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/driver_previous_activity_driver"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/driver_previous"/>
        <Button
            android:id="@+id/driver_pause_activity_driver"
            android:layout_marginBottom="@dimen/padding_margin_20"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/driver_pause"/>
        <Button
            android:id="@+id/driver_next_activity_driver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/driver_next"/>
    </LinearLayout>

    <TextView
        android:id="@+id/driver_mode_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="驾驶模式"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/driver_drawableleft_tv_activity_driver"/>
    <Button
        android:id="@+id/driver_rotate_activity_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/driver_rotate"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
