<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textcolor_checked"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/tv_headertitle"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="听歌识曲"
            android:gravity="center"
            android:textSize="@dimen/font_size_x"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/sound_clear_activity_sound"
            android:layout_width="wrap_content"
            android:text="清空"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_x"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sound_know_activity_sound"
            android:gravity="center"
            android:text="听歌识曲"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:paddingTop="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sound_history_activity_sound"
            android:gravity="center"
            android:text="识别历史"
            android:layout_width="0dp"
            android:clickable="true"
            android:layout_weight="1"
            android:textSize="@dimen/font_size"
            android:paddingTop="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp">
        <ImageView
            android:id="@+id/tableline_sound"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/textcolor_checked"/>
        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/sound_vp_activity_sound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>

